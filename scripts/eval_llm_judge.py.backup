def load_grouped_runs(path: str) -> List[Dict[str, Any]]:
    with open(path, "r", encoding="utf-8") as f:
        return json.load(f)


def extract_question(doc: Dict[str, Any]) -> Optional[str]:
    root = doc.get("root") or {}
    q = (root.get("inputs") or {}).get("question")
    if q:
        return q
    for s in doc.get("steps", []):
        q = (s.get("inputs") or {}).get("question")
        if q:
            return q
    return None


def extract_model_output(doc: Dict[str, Any]) -> Optional[str]:
    """Busca el output del modelo priorizando kpi_numeric_value."""

    # 1ï¸âƒ£ Buscar kpi_numeric_value en TODOS los niveles primero
    root = doc.get("root") or {}
    if root.get("outputs", {}).get("kpi_numeric_value") is not None:
        val = root.get("outputs").get("kpi_numeric_value")
        print(f"âœ… Encontrado kpi_numeric_value en root: {val}")
        return str(val)

    # En steps tambiÃ©n - âœ… AGREGADA VALIDACIÃ“N
    for step in doc.get("steps", []):
        if step is None:  # â† NUEVA LÃNEA
            continue      # â† NUEVA LÃNEA
        if step.get("outputs", {}).get("kpi_numeric_value") is not None:
            val = step.get("outputs").get("kpi_numeric_value")
            print(f"âœ… Encontrado kpi_numeric_value en step '{step.get('name')}': {val}")
            return str(val)

    # 2ï¸âƒ£ Si no hay kpi_numeric_value, busca los otros campos como antes
    outputs = root.get("outputs") or {}
    for k in ["final_answer", "draft_answer", "tool_result", "summary"]:
        if outputs.get(k):
            print(f"âœ… Encontrado '{k}' en root.outputs")
            return outputs.get(k)

    steps = doc.get("steps", [])
    for idx, step in enumerate(steps):
        if step is None:  # â† NUEVA LÃNEA
            continue      # â† NUEVA LÃNEA
        step_outputs = step.get("outputs") or {}
        for k in ["final_answer", "draft_answer", "tool_result", "summary"]:
            if step_outputs.get(k):
                print(f"âœ… Encontrado '{k}' en step '{step.get('name')}'")
                return step_outputs.get(k)

    print("âŒ No se encontrÃ³ model_output en ningÃºn nivel")
    return None

def extract_ground_truth(doc: Dict[str, Any]) -> Optional[str]:
    """Busca ground truth (datos crudos) en: steps â†’ data â†’ rows."""

    steps = doc.get("steps", [])
    print(f"ðŸ” Buscando ground_truth en {len(steps)} steps...")

    for idx, step in enumerate(steps):
        if step is None:  # â† NUEVA LÃNEA
            continue      # â† NUEVA LÃNEA
        step_name = step.get("name", f"step_{idx}")
        step_outputs = step.get("outputs") or {}
        
        # Buscar "data" dict (tÃ­picamente contiene columnas + rows)
        if step_outputs.get("data"):
            data = step_outputs.get("data")
            if isinstance(data, dict):
                rows = data.get("rows")
                cols = data.get("columns")
                
                if rows:
                    print(f"âœ… Encontrado 'data.rows' en step '{step_name}' ({len(rows)} filas)")
                    # Formatea como tabla legible para el juez
                    lines = []
                    if cols:
                        lines.append(" | ".join(map(str, cols)))
                    for r in rows[:20]:  # Primeras 20 filas
                        if isinstance(r, (list, tuple)):
                            lines.append(" | ".join(map(str, r)))
                        else:
                            lines.append(str(r))
                    return "\n".join(lines)
        
        # Buscar "summary" (a veces es el ground truth narrativo)
        if step_outputs.get("summary"):
            print(f"âœ… Encontrado 'summary' en step '{step_name}'")
            return step_outputs.get("summary")
        
        # Buscar "tool_result" (puede contener datos formateados)
        if step_outputs.get("tool_result"):
            print(f"âœ… Encontrado 'tool_result' en step '{step_name}'")
            return step_outputs.get("tool_result")
    
    # 2ï¸âƒ£ Buscar en root.outputs como fallback
    root = doc.get("root") or {}
    outputs = root.get("outputs") or {}
    
    for k in ["data", "summary", "tool_result", "draft_answer", "final_answer"]:
        if outputs.get(k):
            val = outputs.get(k)
            if isinstance(val, dict) and val.get("rows"):
                # Es un data dict
                print(f"âœ… Encontrado '{k}' con datos en root.outputs")
                cols = val.get("columns", [])
                rows = val.get("rows", [])
                lines = []
                if cols:
                    lines.append(" | ".join(map(str, cols)))
                for r in rows[:20]:
                    if isinstance(r, (list, tuple)):
                        lines.append(" | ".join(map(str, r)))
                    else:
                        lines.append(str(r))
                return "\n".join(lines)
            elif isinstance(val, str):
                print(f"âœ… Encontrado '{k}' (texto) en root.outputs")
                return val
    
    # 3ï¸âƒ£ Buscar recursivamente en sub-steps
    for idx, step in enumerate(steps):
        step_name = step.get("name", f"step_{idx}")
        sub_steps = step.get("steps", [])
        
        if sub_steps:
            print(f"ðŸ” Explorando sub-steps de '{step_name}' ({len(sub_steps)} anidados)...")
            for sub_idx, sub_step in enumerate(sub_steps):
                sub_outputs = sub_step.get("outputs") or {}
                sub_name = sub_step.get("name", f"substep_{sub_idx}")
                
                if sub_outputs.get("data"):
                    data = sub_outputs.get("data")
                    if isinstance(data, dict) and data.get("rows"):
                        print(f"âœ… Encontrado 'data' en sub-step '{sub_name}'")
                        cols = data.get("columns", [])
                        rows = data.get("rows", [])
                        lines = []
                        if cols:
                            lines.append(" | ".join(map(str, cols)))
                        for r in rows[:20]:
                            if isinstance(r, (list, tuple)):
                                lines.append(" | ".join(map(str, r)))
                            else:
                                lines.append(str(r))
                        return "\n".join(lines)
    
    print("âŒ No se encontrÃ³ ground_truth en ningÃºn nivel")
    return None

